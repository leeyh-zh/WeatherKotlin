<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dip">

    <com.leeyh.weather.ui.widget.ClearableEditText
        android:id="@+id/search_bar_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dip"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@null"
        android:hint="@string/city_list_search_hint"
        android:singleLine="true"
        android:textColor="@color/search_city_text"
        android:textColorHint="@color/search_city_hint"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="16sp"
        app:clearButtonDrawable="@drawable/ic_clear"
        app:clearButtonHeight="24dip"
        app:clearButtonWidth="24dip" />
</RelativeLayout>